<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_fff">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_search_left"
            android:padding="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/left"/>

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_home_search_left"
            android:background="@drawable/re_solid_r8_gray">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_home_search_sousuo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:src="@mipmap/sousuo"/>


            <EditText
                android:id="@+id/et_home_search"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/iv_home_search_sousuo"
                android:hint="团队/人/投票/问题……"
                android:background="@null"
                android:textSize="12sp" />


        </RelativeLayout>


    </RelativeLayout>



    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索："
        android:textColor="@color/app_color"
        android:textSize="16sp"/>


    <com.administrator.widget.HotRecommendViewGroup
        android:id="@+id/grvg_test"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:paddingTop="24dp"
        app:paddingLeft="12dp"
        app:paddingRight="12dp"
        app:paddingBottom="24dp"
        app:paddingX="12dp"
        app:paddingY="12dp"
        >



    </com.administrator.widget.HotRecommendViewGroup>

</LinearLayout>